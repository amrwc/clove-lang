// Statements:
function f() {
  return 2 + 2;                      // return_expression()
}
f();                                 // call()

let foo1 = [];                       // definition()
let foo2;                            // declaration()
const foo3 = 3;                      // definition()

const f2 = (x) => {                  // definition()
  return x + x;
};

foo2 = 2;                            // assignment()

foo2++;                              // postfix_expression()
